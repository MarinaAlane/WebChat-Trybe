<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Josan Johnata - Web Chat</title>
</head>
<body>
  <h1>WebChat</h1>
    <form class="nicknameForm">
      <div>
        <table>
          <thead>
            <tr>
                <th>Users Online</th>
            </tr>
          </thead>
          <tbody id="userOnlineTable">
          </tbody>
        </table>
        <table>
          <thead>
            <tr>
                <th>Chat Messages</th>
            </tr>
          </thead>
          <tbody id="chatBodyTable">
          </tbody>
        </table>
        <div>
          <input
          id="nick_name"
          type="text"
          class="validate"
          data-testid="nickname-box"
          placeholder="Nickname">
          <label id="labelNickName" for="nick_name"></label>
        </div>
        <div>
          <button
           name="action"
           onclick="changeNickname()"
           data-testid="nickname-button"
           >save
          </button>
        </div>
      </div>
    </form>
  </div>
  <div>
    <form class="messageForm">
      <div>
        <div>
          <input id="text_message" type="text" class="validate" data-testid="message-box" >
          <label for="text_message">Message</label>
        </div>
        <div>
          <button
          name="action"
          onclick="sendMessage()"
          data-testid="send-button"
          >send
          </button>
        </div>
      </div>
    </form>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="./js/chat.js"></script>
</html>