<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO - trybe</title>
  </head>
  <body>
    <h3 id="nickname"></h3>
    <ul id="users"></ul>
    <ul id="messages">
      <% history.forEach((message) => { %>
      <li data-testid="message"><%= `${message.timestamp} - ${message.nickname}: ${message.message}`%></li>
    <% }) %>
  </ul>
    <form action="" id="message-form">
      <input id="message-input" data-testid="message-box" />
      <button data-testid="send-button" >Send</button>
    </form>
    <form action="" id="nickname-form">
      <input id="nickname-input" data-testid="nickname-box" />
      <button data-testid="nickname-button" >Change nickname</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src='./js/chatScript.js'></script>
  </body>
</html>