</head>
<body>
  <main>
    <div class="first-container">
      <div class="login-container">
        <h3> User Config: </h3>
        <form class="login-form">
          <input data-testid="nickname-box" id="nicknameInput" type="text" placeholder="nickname" name="nickname" />
          <button data-testid="nickname-button" id="nicknameBtn">Save</button>
        </form>
      </div>
    </div>
    <div id="chat-container">
      <h3> Chat Messages: </h3>
      <div class="messages-div"></div>
      <form action="">
        <input data-testid="message-box" id="messageInput" autocomplete="off" /><button data-testid="send-button" id="sendBtn">Send</button>
        <p id="warningNickname"></p>
      </form>
    </div>
  </main>
  
  <script src="/socket.io/socket.io.js"></script>
  <script src="./chat.js"></script>
</body>
</html>